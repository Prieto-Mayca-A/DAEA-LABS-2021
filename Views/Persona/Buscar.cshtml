                <th>Direccion</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(model => model.PersonaID)</td>
                <td>@Html.DisplayFor(model => model.Nombre)</td>
                <td>@Html.DisplayFor(model => model.Apellido)</td>
                <td>@Html.DisplayFor(model => model.FechaNac)</td>
                <td>@Html.DisplayFor(model => model.Direccion)</td>
                <td>@Html.DisplayFor(model => model.Email)</td>

            </tr>
